            android:name=".TestPrepPrefsView"
            android:label="@string/title_activity_test_prep_prefs_view" >
        </activity>
        <activity
            android:name=".TestResults"
            android:label="@string/title_activity_test_results" >
        </activity>
        <activity
            android:name=".TestReview"
            android:label="@string/title_activity_test_review" >
